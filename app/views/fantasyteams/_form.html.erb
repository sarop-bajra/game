<%= form_for @fantasyteam do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :image, 'Image URL' %>
  <%= f.text_field :image %>
  <br>

<% @players.each do |player| %>
  <%= check_box_tag 'players[]', player.id %>
  <%= player.name  %> (<%= player.team.name %>)
  <br>

<% end %>

<%= f.submit "Edit Fantasy Team" %>

<% end %>
