<h2>Login</h2>
<% if flash[:error] %>
  <!-- print out any error message from the controller -->
  <br>
  <strong>
    <%= flash[:error] %>
  </strong>
  <br>
  <br>
<% end %>
<!-- we are not interacting with a model object -->
<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>

  <%= submit_tag 'Login'%>
<% end %>
